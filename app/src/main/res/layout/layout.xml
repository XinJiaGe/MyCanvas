<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="meizuFingerprint"
            android:layout_weight="1"
            android:text="魅族指纹识别"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="zsyhorizontal"
            android:layout_weight="3"
            android:text="自适应horizontal布局"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="vector"
            android:layout_weight="1"
            android:text="Vector"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="zhizheng"
            android:layout_weight="1"
            android:text="指针"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="bing"
            android:layout_weight="1"
            android:text="饼"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gundong2"
            android:layout_weight="1"
            android:text="滚动"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="game"
            android:layout_weight="1"
            android:text="Game"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="qinkong"
            android:layout_weight="1"
            android:text="清空"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="zhuzi"
            android:layout_weight="1"
            android:text="柱状"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="zhexian"
            android:layout_weight="1"
            android:text="折线"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dian"
            android:layout_weight="1"
            android:text="形状"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="zhedian"
            android:layout_weight="1"
            android:text="折线点"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <ImageView
                tools:targetApi="21"
                android:visibility="gone"
                android:id="@+id/layout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/animated_vector_menu_back"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
